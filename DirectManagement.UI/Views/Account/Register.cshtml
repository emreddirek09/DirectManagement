
@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_HomeLayout.cshtml";
}


    <!-- auth page bg -->
    <div class="auth-one-bg-position auth-one-bg" id="auth-particles">
        <div class="bg-overlay"></div>

        <div class="shape">
            <svg xmlns="http://www.w3.org/2000/svg" version="1.1" xmlns:xlink="http://www.w3.org/1999/xlink" viewBox="0 0 1440 120">
                <path d="M 0,36 C 144,53.6 432,123.2 720,124 C 1008,124.8 1296,56.8 1440,40L1440 140L0 140z"></path>
            </svg>
        </div>
    </div>

    <!-- auth page content -->
    <div class="auth-page-content">
        <div class="container"> 
            <!-- end row -->

            <div class="row justify-content-center">
                <div class="col-md-8 col-lg-6 col-xl-5">
                    <div class="card mt-4">

                        <div class="card-body p-4">
                            <div class="text-center mt-2">
                                <h5 class="text-primary">Yeni Hesap Oluştur</h5>
                                <p class="text-muted">Ücretsiz hesabınızı hemen alın</p>
                            </div>
                            <div class="p-2 mt-4">
                                <form class="needs-validation" novalidate>

                                    <div class="mb-3">
                                        <label for="useremail" class="form-label">E-posta  <span class="text-danger">*</span></label>
                                        <input type="email" class="form-control" id="useremail" placeholder="E-posta adresini girin" required>
                                        <div class="invalid-feedback">
                                            Lütfen E-posta adresini girinizi
                                        </div>
                                    </div>
                                    <div class="mb-3">
                                        <label for="username" class="form-label">Kullanıcı adı <span class="text-danger">*</span></label>
                                        <input type="text" class="form-control" id="username" placeholder="Kullanıcı adı girin" required>
                                        <div class="invalid-feedback">
                                            Lütfen kullanıcı adı girin
                                        </div>
                                    </div>

                                    <div class="mb-2">
                                        <label for="userpassword" class="form-label">Şifre <span class="text-danger">*</span></label>
                                        <input type="password" class="form-control" id="userpassword" placeholder="Şifre girin" required>
                                        <div class="invalid-feedback">
                                            Lütfen şifre girin
                                        </div>
                                    </div>

                                    <div class="mb-4">
                                        <p class="mb-0 fs-12 text-muted fst-italic">Kayıt olarak Direct Yönetim <a href="#" class="text-primary text-decoration-underline fst-normal fw-medium">Kullanım Şartları'nı kabul etmiş olursunuz</a></p>
                                    </div>

                                    <div class="mt-4">
                                        <button class="btn btn-success w-100" type="submit">Üye ol</button>
                                    </div>

                                    <div class="mt-4 text-center">
                                        <div class="signin-other-title">
                                            <h5 class="fs-13 mb-4 title text-muted">Hesap Oluştur</h5>
                                        </div>

                                        <div>
                                            <button type="button" class="btn btn-primary btn-icon waves-effect waves-light"><i class="ri-facebook-fill fs-16"></i></button>
                                            <button type="button" class="btn btn-danger btn-icon waves-effect waves-light"><i class="ri-google-fill fs-16"></i></button>
                                            <button type="button" class="btn btn-dark btn-icon waves-effect waves-light"><i class="ri-github-fill fs-16"></i></button>
                                            <button type="button" class="btn btn-info btn-icon waves-effect waves-light"><i class="ri-twitter-fill fs-16"></i></button>
                                        </div>
                                    </div>
                                </form>

                            </div>
                        </div>
                        <!-- end card body -->
                    </div>
                    <!-- end card -->

                    <div class="mt-4 text-center">
                        <p class="mb-0">Zaten bir hesabınız var mı? <a class="fw-semibold text-primary text-decoration-underline" asp-action="Login" asp-controller="Account"> Giriş Yap </a> </p>
                    </div>

                </div>
            </div>
            <!-- end row -->
        </div>
        <!-- end container -->
    </div>
    <!-- end auth page content -->
     

